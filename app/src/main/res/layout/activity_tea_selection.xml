<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeaSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bgop1"
        android:backgroundTintMode="multiply"
        android:backgroundTint="@color/material_dynamic_neutral80">

        <TextView
            android:text="@string/choose_tea"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/desc_background"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
             android:layout_width="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Search teas..." />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="end">

                <Button
                    android:id="@+id/btnSortAZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/pomegranate"
                    android:text="A->Z" />

                <Button
                    android:id="@+id/btnSortZA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z->A"
                    app:backgroundTint="@color/pomegranate"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/teaRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teaRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>